# =============================================================================
# HARMONIA ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your actual values
# =============================================================================

# =============================================================================
# GEMINI AI API KEY (REQUIRED)
# =============================================================================
# Get your API key from: https://aistudio.google.com/apikey
# IMPORTANT: Keep this secure! Never commit .env to git
GEMINI_API_KEY=AIzaSy...your-actual-key-here

# Optional: Choose which Gemini model to use
# Options: gemini-3-pro-preview, gemini-3-flash-preview, gemini-2.5-pro, gemini-2.5-flash
GEMINI_MODEL=gemini-3-pro-preview

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Your domain registered with Cloudflare
DOMAIN=yourdomain.com

# Protocol (use https in production with Cloudflare SSL)
PROTOCOL=https

# =============================================================================
# ZOHO MAIL CONFIGURATION (for automatic emails)
# =============================================================================
# SMTP Server Settings
SMTP_HOST=smtp.zoho.com
SMTP_PORT=465
SMTP_USE_SSL=true

# Your Zoho email credentials
# IMPORTANT: Use an app-specific password, not your main password!
# Generate one at: https://accounts.zoho.com/home#security/password
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-zoho-app-specific-password-here

# Email Display Settings
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Harmonia
REPLY_TO_EMAIL=support@yourdomain.com

# Email Feature Flags
EMAIL_ENABLED=true
SEND_WELCOME_EMAIL=true
SEND_REPORT_EMAIL=true

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server bind address (0.0.0.0 for Contabo to accept external connections)
HOST=0.0.0.0

# Port to run on (8000 is default)
PORT=8000

# Number of Gunicorn workers (CPU cores * 2 + 1 is recommended)
WORKERS=4

# Environment
ENVIRONMENT=production

# Debug mode (set to false in production)
DEBUG=false

# =============================================================================
# SECURITY & CORS
# =============================================================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Optional: Require API keys for additional security
REQUIRE_API_KEY=false
API_KEYS=

# =============================================================================
# CLOUDFLARE CONFIGURATION (optional but recommended)
# =============================================================================
CLOUDFLARE_ENABLED=true
# Get Zone ID from Cloudflare Dashboard > Overview (right sidebar)
CLOUDFLARE_ZONE_ID=your-zone-id-here
# Create API token at: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token-here

# Trust Cloudflare proxy headers (for real client IP)
TRUST_PROXY_HEADERS=true

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
DATA_DIR=./data
UPLOAD_DIR=./uploads
REPORTS_DIR=./harmonia_outputs

# Maximum file sizes (in MB)
MAX_IMAGE_SIZE_MB=10
MAX_DNA_FILE_SIZE_MB=5

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/harmonia.log

# =============================================================================
# DATABASE (optional - for future use)
# =============================================================================
# DATABASE_URL=postgresql://user:password@localhost/harmonia

# =============================================================================
# NOTES
# =============================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Never commit .env to version control (it's in .gitignore)
# 3. On Contabo, set these via: export VARIABLE_NAME="value"
#    Or add them to /etc/environment for persistence
# 4. For Zoho Mail, you MUST use an app-specific password
# 5. For Gemini API, keep requests under rate limits to avoid security flags
